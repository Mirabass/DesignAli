@model DAERP.BL.Models.Product.ProductDivisionModel
<form method="post" asp-action="Create">
    <div class="p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Nové rozdělení výrobku</h2>
        </div>
        <div class="form-group row border p-2 shadow rounded">
            <div class="col-12">
                <div class="row">
                    <div class="col-md-3 col-6 p-1">
                        <div class="col">
                            <label asp-for="Number"></label>
                        </div>
                        <div class="col">
                           <input asp-for="Number" class="form-control"/>
                           <span asp-validation-for="Number" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3 col-6 p-1">
                        <div class="col">
                            <label asp-for="Name"></label>
                        </div>
                        <div class="col">
                            <input asp-for="Name" class="form-control"/>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3 col-6 p-1">
                        <div class="col">
                            <label asp-for="ProductKind.Number"></label>
                        </div>
                        <div class="col">
                            <input asp-for="ProductKind.Number" class="form-control"/>
                            <span asp-validation-for="ProductKind.Number" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3 col-6 p-1">
                        <div class="col">
                            <label asp-for="ProductKind.Name"></label>
                        </div>
                        <div class="col">
                            <input asp-for="ProductKind.Name" class="form-control"/>
                            <span asp-validation-for="ProductKind.Name" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 col-6 p-1">
                        <div class="col">
                            <label asp-for="ProductMaterial.Number"></label>
                        </div>
                        <div class="col">
                            <input asp-for="ProductMaterial.Number" class="form-control"/>
                            <span asp-validation-for="ProductMaterial.Number" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3 col-6 p-1">
                        <div class="col">
                            <label asp-for="ProductMaterial.Name"></label>
                        </div>
                        <div class="col">
                            <input asp-for="ProductMaterial.Name" class="form-control"/>
                            <span asp-validation-for="ProductMaterial.Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3 col-6 p-1">
                        <div class="col">
                            <label asp-for="ProductType"></label>
                        </div>
                        <div class="col">
                            <input asp-for="ProductType" class="form-control"/>
                            <span asp-validation-for="ProductType" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3 col-6 p-1">
                        <div class="col">
                            <label asp-for="Comment"></label>
                        </div>
                        <div class="col">
                            <input asp-for="Comment" class="form-control"/>
                            <span asp-validation-for="Comment" class="text-danger"></span>
                        </div>
                    </div>
                </div>
             </div>
                
            <div class="col-12">
                <div class="form-group row justify-content-around p-2">
                    <div class="col-6">
                        <input type="submit" class="btn btn-info w-75" value="Vytvořit nové rozdělení výrobku" />
                    </div>
                    <div class="col-6">
                        <a class="btn btn-danger w-75" asp-action="Index">Vrátit se</a>
                    </div>
                </div>
            </div>
            
        </div>
    </div>

</form>