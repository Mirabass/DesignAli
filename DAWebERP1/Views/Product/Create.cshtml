@model DAWebERP1.Models.Product.ProductModel

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Vytvořit nový výrobek</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ProductDivision.Name"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Design"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="EAN"></label>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        @Html.DropDownListFor(product => product.ProductDivision.Id, this.ViewBag.ProductNames as SelectList, new { @class = "form-control" })  
                        <input asp-for="ProductDivision.Name" class="form-control"/>
                    </div>
                    <div class="col-4">
                        <input asp-for="Design" class="form-control"/>
                    </div>
                    <div class="col-4">
                        <input asp-for="EAN" class="form-control"/>
                    </div>
                </div>
                <div class="form-grou row">
                    <div class="col-8 text-center row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="create" />
                        </div>
                        <div class="col">
                            <a class="btn btn-danger" asp-action="Index">Vrátit se</a>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>

</form>