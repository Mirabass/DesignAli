@model DAERP.BL.Models.Product.ProductModel
<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Odstranit výrobek</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ProductDivision.Name"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Design"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="EAN"></label>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="ProductDivision.Name" disabled class="form-control" />
                    </div>
                    <div class="col-4">
                        <input asp-for="Design" disabled class="form-control"/>
                    </div>
                    <div class="col-4">
                        <input asp-for="EAN" disabled class="form-control"/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 text-center row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Odstranit výrobek" />
                        </div>
                        <div class="col">
                            <a class="btn btn-success w-75" asp-action="Index">Vrátit se</a>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>

</form>