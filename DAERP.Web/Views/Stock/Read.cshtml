@model DAERP.Web.Helper.PaginatedList<DAERP.Web.ViewModels.ProductCustomersReadViewModel>
@{
    ViewData["Title"] = "Read";
}

<div class="container-fluid p-3">
    <div class="col-12 col-md-12">
        <div class="row">
            <div class="col-12 col-md-6"><h2 class="text-primary">04.02.01 - Sklad výrobků - stav</h2></div>
                <div class="col-12 col-md-6">
                    <form asp-action="Index" method="get">
                        <div class="form-actions no-color">
                            <p>
                                Prohledat výrobky: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
                                <input type="hidden" name="CurrentSort" value="@ViewData["CurrentSort"]" />
                                <input type="submit" value="Filtrovat" class="btn btn-secondary"/> |
                                <a class="btn btn-outline-warning" asp-action="Index" asp-route-currentSort="@ViewData["CurrentSort"]">Zpět na celý seznam</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    <br />

     @if (Model.Count() > 0)
    {
        <div>
            <table
            class="table table-bordered table-striped table-responsive"
            data-filter-control="true"
            data-show-search-clear-button="true"
            style="width:unset;text-align:center;word-wrap:normal">
               <thead>
                   <tr>
                       <th id="productHeader" colspan="4">
                           Výrobek
                       </th>
                   </tr>
                   <tr>
                       <th id="productHeader">
                           <a asp-action="Read" asp-route-sortOrder="@ViewData["DesignationSortParam"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">@Html.DisplayNameFor(model => model.FirstOrDefault().Product.Designation)</a>
                       </th>
                       <th id="productHeader">
                           <a asp-action="Read" asp-route-sortOrder="@ViewData["EANSortParam"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">@Html.DisplayNameFor(model => model.FirstOrDefault().Product.EAN)</a>
                       </th>
                       <th id="productHeader">
                           <a asp-action="Read" asp-route-sortOrder="@ViewData["ProductDivisionNameSortParam"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">@Html.DisplayNameFor(model => model.FirstOrDefault().Product.ProductDivision.Name)</a>
                       </th>
                       <th id="productHeader">
                           <a asp-action="Read" asp-route-sortOrder="@ViewData["ProductDivisionProductTypeSortParam"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">@Html.DisplayNameFor(model => model.FirstOrDefault().Product.ProductDivision.ProductType)</a>
                       </th>
                   </tr>
                </thead>
                <tbody>
                   @foreach (var productCustomers in Model)
                   {
                       
                       <tr data-toggle="popover" data-trigger="hover" id="@productCustomers.Product.Id">
                           <td>@productCustomers.Product.Designation</td>
                           <td>@productCustomers.Product.EAN</td>
                           <td>@productCustomers.Product.ProductDivision.Name</td>
                           <td>@productCustomers.Product.ProductDivision.ProductType</td>
                       </tr>
                   }
                </tbody>
            </table>
        </div>
    }
</div>

