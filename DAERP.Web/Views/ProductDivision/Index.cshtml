@model IEnumerable<DAERP.BL.Models.Product.ProductDivisionModel>
@{
    ViewData["Title"] = "Index";
}


<div class="container-fluid p-3">
    <h2 class="text-primary">02.00.03 - Rozdělení výrobků</h2>
    <br />
       <div>
           <table class="table table-bordered table-striped" style="width:unset;text-align:center;word-wrap:normal">
               <thead>
                   <tr>
                       <th style="vertical-align:middle;width:6%">
                           <a class="btn btn-primary" asp-controller="ProductDivision" asp-action="Create">
                               <i class="fas fa-plus"></i>
                           </a>
                       </th>
                       <th>
                           č.
                       </th>
                       <th>
                           Střih - Název
                       </th>
                       <th>
                           č.
                       </th>
                       <th>
                           Druh
                       </th>
                       <th>
                           č.
                       </th>
                       <th>
                           Materiál
                       </th>
                       <th>
                           Typ výrobku
                       </th>
                       <th>
                           Poznámky
                       </th>
                    </tr>
                </thead>
                @if (Model.Count() > 0)
            {
                <tbody>
                    @foreach (var productDivision in Model)
                    {
                        <tr>
                            <td>
                                <div class="row">
                                    <div class="col text-nowrap">
                                        <a asp-controller="ProductDivision" asp-action="Update" asp-route-Id="@productDivision.Id" class="btn btn-primary mx-1">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-controller="ProductDivision" asp-action="Delete" asp-route-Id="@productDivision.Id" class="btn mx-1 bg-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </div>
                            </td>
                            <td>@productDivision.Number</td>
                            <td>@productDivision.Name</td>
                            <td>@productDivision.ProductKind.Number</td>
                            <td>@productDivision.ProductKind.Name</td>
                            <td>@productDivision.ProductMaterial.Number</td>
                            <td>@productDivision.ProductMaterial.Name</td>
                            <td>@productDivision.ProductType</td>
                            <td>@productDivision.Comment</td>
                        </tr>
                    }
                </tbody>
            }
        </table>
        </div>
</div>

