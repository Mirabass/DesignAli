@model DAERP.BL.Models.Product.ProductDivisionModel
<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Odstranit rozdělení výrobku</h2>
        </div>
        <div class="form-group row border p-2 shadow rounded">
            <div class="col-12">
                <div class="row">
                    <div class="col-md-3 col-6 p-1">
                        <div class="col">
                            <label asp-for="Number"></label>
                        </div>
                        <div class="col">
                           <input asp-for="Number" disabled class="form-control"/>
                        </div>
                    </div>
                    <div class="col-md-3 col-6 p-1">
                        <div class="col">
                            <label asp-for="Name"></label>
                        </div>
                        <div class="col">
                            <input asp-for="Name" disabled class="form-control"/>
                        </div>
                    </div>
                    <div class="col-md-3 col-6 p-1">
                        <div class="col">
                            <label asp-for="ProductKind.Number"></label>
                        </div>
                        <div class="col">
                            <input asp-for="ProductKind.Number" disabled class="form-control"/>
                        </div>
                    </div>
                    <div class="col-md-3 col-6 p-1">
                        <div class="col">
                            <label asp-for="ProductKind.Name"></label>
                        </div>
                        <div class="col">
                            <input asp-for="ProductKind.Name" disabled class="form-control"/>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 col-6 p-1">
                        <div class="col">
                            <label asp-for="ProductMaterial.Number"></label>
                        </div>
                        <div class="col">
                            <input asp-for="ProductMaterial.Number" disabled class="form-control"/>
                        </div>
                    </div>
                    <div class="col-md-3 col-6 p-1">
                        <div class="col">
                            <label asp-for="ProductMaterial.Name"></label>
                        </div>
                        <div class="col">
                            <input asp-for="ProductMaterial.Name" disabled class="form-control"/>
                        </div>
                    </div>
                    <div class="col-md-3 col-6 p-1">
                        <div class="col">
                            <label asp-for="ProductType"></label>
                        </div>
                        <div class="col">
                            <input asp-for="ProductType" disabled class="form-control"/>
                        </div>
                    </div>
                    <div class="col-md-3 col-6 p-1">
                        <div class="col">
                            <label asp-for="Comment"></label>
                        </div>
                        <div class="col">
                            <input asp-for="Comment" disabled class="form-control"/>
                        </div>
                    </div>
                </div>
             </div>
                
            <div class="col-12">
                <div class="form-group row justify-content-around p-2">
                    <div class="col-6">
                        <input type="submit" class="btn btn-danger w-75" value="Odstranit toto rozdělení výrobku" />
                    </div>
                    <div class="col-6">
                        <a class="btn btn-success w-75" asp-action="Index">Vrátit se</a>
                    </div>
                </div>
            </div>
            
        </div>
    </div>

</form>