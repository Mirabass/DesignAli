@model IEnumerable<DAWebERP1.Models.Product.ProductModel>
@{
    ViewData["Title"] = "Products";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Číselník výrobků</h2>
        </div>
        <div class="col-6">
            <a class="btn btn-primary" asp-controller="Product" asp-action="Create">Vytvoř nový výrobek</a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
   {
       <div class=overflow-auto>
           <table class="table table-bordered table-striped" style="width:unset;text-align:center">
               <thead>
                   <tr>
                       <th></th>
                       <th colspan="4" style="background-color:lightyellow">
                           Výrobek
                       </th>
                       <th colspan="8" style="background-color:lightblue">
                           Barevné provedení
                       </th>
                   </tr>
                   <tr>
                       <th></th>
                       <th style="background-color:lightyellow">Číslo výrobku</th>
                       <th style="background-color:lightyellow">EAN</th>
                       <th style="background-color:lightyellow">Název výrobku</th>
                       <th style="background-color:lightyellow">Typ výrobku</th>
                       <th style="background-color:lightblue">Počet</th>
                       <th style="background-color:lightblue">Orientace</th>
                       <th style="background-color:lightblue">RAL</th>
                       <th style="background-color:lightblue">Barva základní části</th>
                       <th style="background-color:lightblue">Vzor</th>
                       <th style="background-color:lightblue">RAL</th>
                       <th style="background-color:lightblue">Barva dna, kapsy</th>
                       <th style="background-color:lightblue">Kapsa</th>
                   </tr>
               </thead>

               <tbody>
                   @foreach (var product in Model)
                   {
                       <tr>
                           <td>
                               <div class="col-2 text-left">
                                   <a asp-controller="Product" asp-action="Update" asp-route-Id="@product.Id" class="btn btn-primary mx-1">Upravit</a>
                                   <a asp-controller="Product" asp-action="Delete" asp-route-Id="@product.Id" class="btn btn-danger mx-1">Odstranit</a>
                               </div>
                           </td>
                           <td>@product.Designation</td>
                           <td>@product.EAN</td>
                           <td>@product.ProductDivision.Name</td>
                           <td>@product.ProductDivision.ProductType</td>
                           <td>@product.ProductColorDesign.Quantity</td>
                           <td>@product.ProductColorDesign.Orientation</td>
                           <td>@product.ProductColorDesign.MainPartRAL</td>
                           <td>@product.ProductColorDesign.MainPartColorName</td>
                           <td style="background-color:@product.ProductColorDesign.MainPartColorHex"></td>
                           <td>@product.ProductColorDesign.PocketRAL</td>
                           <td>@product.ProductColorDesign.PocketColorName</td>
                           <td></td>
                       </tr>
                   }

               </tbody>

           </table>
       </div>
   }
</div>