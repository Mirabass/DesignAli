@model DAERPLibrary.Models.Product.ProductModel
<form method="post" asp-action="Update">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Úprava výrobku</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-sm-4 p-2">
                        <div class="col-sm">
                            <label asp-for="ProductDivision.Name"></label>
                        </div>
                        <div class="col-sm">
                            @Html.DropDownListFor(product => product.ProductDivision.Id, this.ViewBag.ProductNames as SelectList,
                                new { id = "ProductNames", @class = "selectProductDivision show-tick form-control" })
                        </div>
                    </div>
                    <div class="col-sm-4 p-2">
                        <div class="col-sm">
                            <label asp-for="Design"></label>
                        </div>
                        <div class="col-sm">
                            <input asp-for="Design" class="form-control"/>
                            <span asp-validation-for="Design" class="text-danger"></span>
                        </div>
                     </div>
                     <div class="col-sm-4 p-2">
                        <div class="col-sm">
                            <label asp-for="EAN"></label>
                        </div>
                        <div class="col-sm">
                            <input asp-for="EAN" class="form-control"/>
                            <span asp-validation-for="EAN" class="text-danger"></span>
                        </div>
                     </div>
                 </div>
            </div>
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-sm-4 p-2">
                        <div class="col-sm">
                            <label asp-for="ProductColorDesign.Quantity"></label>
                        </div>
                        <div class="col-sm">
                            <input asp-for="ProductColorDesign.Quantity" class="form-control" />
                            <span asp-validation-for="ProductColorDesign.Quantity" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-4 p-2">
                        <div class="col-sm">
                            <label asp-for="ProductStrap.Length"></label>
                        </div>
                        <div class="col-sm">
                            <input asp-for="ProductStrap.Length" class="form-control" />
                            <span asp-validation-for="ProductStrap.Length" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="form-group row justify-content-around p-2">
                    <div class="col-sm-3 p-2">
                        <input type="submit" onchange="nullProductDivision()" class="btn btn-info w-75" value="Upravit nový výrobek" />
                    </div>
                    <div class="col-sm-3 p-2">
                        <a class="btn btn-danger w-75" asp-action="Index">Vrátit se</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>
<script>
    function nullProductDivision() {
        alert("works");
}
</script>