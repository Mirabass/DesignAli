@model DAERP.Web.ViewModels.ProductCreateViewModel
<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Odstranit výrobek</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <!-- Výrobek -->
                <div class="form-group row border p-2 shadow rounded">
                    <div class="col-12">
                        <div class="row p-3">
                            <div class="col text-info">
                                Výrobek
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3 col-6 p-1">
                                <div class="col">
                                    <label asp-for="ProductDivisionId"></label>
                                </div>
                                <div class="col">
                                    @ViewBag.ProductName
                                </div>
                            </div>
                            <div class="col-md-3 col-6 p-1">
                                <div class="col">
                                    <label asp-for="Design"></label>
                                </div>
                                <div class="col">
                                    <input asp-for="Design" disabled class="form-control"/>
                                </div>
                            </div>
                            <div class="col-md-3 col-6 p-1">
                                <div class="col">
                                    <label asp-for="EAN"></label>
                                </div>
                                <div class="col">
                                    <input asp-for="EAN" disabled class="form-control"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Ceny -->
                <div class="form-group row border p-2 shadow rounded">
                    <div class="col-12">
                        <div class="row p-3">
                            <div class="col text-info">
                                Ceny
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3 col-6 p-1">
                                <div class="col">
                                    <label asp-for="ProductPrices.OperatedCostPrice"></label>
                                </div>
                                <div class="col">
                                    <input asp-for="ProductPrices.OperatedCostPrice" class="form-control"/>
                                </div>
                            </div>
                            <div class="col-md-3 col-6 p-1">
                                <div class="col">
                                    <label asp-for="ProductPrices.OperatedSellingPrice"></label>
                                </div>
                                <div class="col">
                                    <input asp-for="ProductPrices.OperatedSellingPrice" class="form-control"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Barevné provedení -->
                <div class="form-group row border p-2 shadow rounded">
                    <div class="col-12">
                        <div class="row p-3">
                            <div class="col text-info">
                                Barevné provedení
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3 col-6 p-1">
                                <div class="col">
                                    <label asp-for="ProductColorDesign.Quantity"></label>
                                </div>
                                <div class="col">
                                    <input asp-for="ProductColorDesign.Quantity" disabled class="form-control"/>
                                </div>
                            </div>
                            <div class="col-md-3 col-6 p-1">
                                <div class="col">
                                    <label asp-for="ProductColorDesign.Orientation"></label>
                                </div>
                                <div class="col">
                                    <input asp-for="ProductColorDesign.Orientation" disabled class="form-control"/>
                                </div>
                            </div>
                            <div class="col-md-3 col-6 p-1">
                                <div class="col">
                                    <label asp-for="ProductColorDesign.MainPartRAL"></label>
                                </div>
                                <div class="col">
                                    <input asp-for="ProductColorDesign.MainPartRAL" disabled class="form-control"/>
                                </div>
                            </div>
                            <div class="col-md-3 col-6 p-1">
                                <div class="col">
                                    <label asp-for="ProductColorDesign.MainPartColorName"></label>
                                </div>
                                <div class="col">
                                    <input asp-for="ProductColorDesign.MainPartColorName" disabled class="form-control"/>
                                </div>
                            </div>
                            <div class="col-md-3 col-6 p-1">
                                <div class="col">
                                    <label asp-for="ProductColorDesign.PocketRAL"></label>
                                </div>
                                <div class="col">
                                    <input asp-for="ProductColorDesign.PocketRAL" disabled class="form-control"/>
                                </div>
                            </div>
                            <div class="col-md-3 col-6 p-1">
                                <div class="col">
                                    <label asp-for="ProductColorDesign.PocketColorName"></label>
                                </div>
                                <div class="col">
                                    <input asp-for="ProductColorDesign.PocketColorName" disabled class="form-control"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Popruh / ucha -->
                <div class="form-group row border p-2 shadow rounded">
                    <div class="col-12">
                        <div class="row p-3">
                            <div class="col-12 text-info">
                                Popruh / ucha
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3 col-6 p-1">
                                <div class="col">
                                    <label asp-for="ProductStrap.Type"></label>
                                </div>
                                <div class="col">
                                    <input asp-for="ProductStrap.Type" disabled class="form-control"/>
                                </div>
                            </div>
                            <div class="col-md-3 col-6 p-1">
                                <div class="col">
                                    <label asp-for="ProductStrap.Material"></label>
                                </div>
                                <div class="col">
                                    <input asp-for="ProductStrap.Material" disabled class="form-control"/>
                                </div>
                            </div>
                            <div class="col-md-3 col-6 p-1">
                                <div class="col">
                                    <label asp-for="ProductStrap.Length"></label>
                                </div>
                                <div class="col">
                                    <input asp-for="ProductStrap.Length" disabled class="form-control"/>
                                </div>
                            </div>
                            <div class="col-md-3 col-6 p-1">
                                <div class="col">
                                    <label asp-for="ProductStrap.Width"></label>
                                </div>
                                <div class="col">
                                    <input asp-for="ProductStrap.Width" disabled class="form-control"/>
                                </div>
                            </div>
                            <div class="col-md-3 col-6 p-1">
                                <div class="col">
                                    <label asp-for="ProductStrap.RAL"></label>
                                </div>
                                <div class="col">
                                    <input asp-for="ProductStrap.RAL" disabled class="form-control"/>
                                </div>
                            </div>
                            <div class="col-md-3 col-6 p-1">
                                <div class="col">
                                    <label asp-for="ProductStrap.ColorName"></label>
                                </div>
                                <div class="col">
                                    <input asp-for="ProductStrap.ColorName" disabled class="form-control"/>
                                </div>
                            </div>
                            <div class="col-md-3 col-6 p-1">
                                <div class="col">
                                    <label asp-for="ProductStrap.Attachment"></label>
                                </div>
                                <div class="col">
                                    <input asp-for="ProductStrap.Attachment" disabled class="form-control"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Motiv -->
                <div class="form-group row border p-2 shadow rounded">
                    <div class="col-md-3 col-6 p-1">
                        <div class="col">
                            <label asp-for="Motive"></label>
                        </div>
                        <div class="col">
                            <input asp-for="Motive" disabled class="form-control"/>
                        </div>
                    </div>
                </div>
                <!-- Doplňky -->
                <div class="form-group row border p-2 shadow rounded">
                    <div class="col-md-3 col-6 p-1">
                        <div class="col">
                            <label asp-for="Accessories"></label>
                        </div>
                        <div class="col">
                            <input asp-for="Accessories" disabled class="form-control"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="form-group row justify-content-around p-2">
                    <div class="col-6">
                        <input type="submit" class="btn btn-danger w-75" value="Odstranit výrobek" />
                    </div>
                    <div class="col-6">
                        <a class="btn btn-success w-75" asp-action="Index">Vrátit se</a>
                    </div>
                </div>
            </div>
            
        </div>
    </div>

</form>